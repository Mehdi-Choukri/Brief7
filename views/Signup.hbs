                <span id="err_prenom"></span>
              </div>
            </div>
            <div class="form-group">
              <label for="inputAddress">Code d'identité National  </label>
              <input type="text" name="name_cin" class="form-control" id="Cin" placeholder="HHxxxxxx">
              <span id="err_cin"></span>
            </div>
            <div class="form-group">
              <label for="inputAddress2">Email  </label>
              <input type="email" name="name_email" class="form-control" id="qualite" placeholder="mail@gmail.com">
              <span id="err_qualite"></span>
            </div>
             <div class="form-group">
              <label for="inputAddress2">Mot de passe  </label>
              <input type="password" name="name_pw" class="form-control" id="id_pw"  >
              <span id="err_qualite"></span>
            </div>
             <div class="form-group">
              <label for="inputAddress2">Confirmation mot de passe  </label>
              <input type="password" name="name_cpw" class="form-control" id="qualite"  >
              <span id="err_qualite"></span>
            </div>
                   <div class="form-group">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck">
                <label class="form-check-label" for="gridCheck">
                    j’ai lu et j’accepte les conditions générales, notamment la mention relative à la protection des données personnelles *
                </label>
              </div>
            </div>
