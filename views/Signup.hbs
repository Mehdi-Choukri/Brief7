        <form id="_form" method="POST" action="/submit">
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="inputEmail4">Votre Nom  </label>
                <input type="text" name="name_nom" class="form-control" id="Nom" placeholder="Nom">
                <span id="err_nom"></span>
              </div>
              <div class="form-group col-md-6">
                <label for="inputPassword4">Votre Prénom   </label>
